{
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "installCommand": "npm install --production=false",
    "devCommand": "npm run dev",
    "functions": {
        "app/api/**/*.ts": {
            "maxDuration": 30
        }
    },
    "crons": [
        {
            "path": "/api/cron/cleanup",
            "schedule": "0 2 * * *"
        }
    ],
    "env": {
        "SKIP_ENV_VALIDATION": "1"
    }
}